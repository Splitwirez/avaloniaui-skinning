<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaUI.Skinning.Sample.MainWindow"
        Title="AvaloniaUI.Skinning.Sample">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left">
            <Button>Button</Button>
            <CheckBox>CheckBox</CheckBox>
            <RadioButton>RadioButton</RadioButton>
            <ComboBox>
                <ComboBoxItem>ComboBoxItem</ComboBoxItem>
                <ComboBoxItem>ComboBoxItem</ComboBoxItem>
            </ComboBox>
            <TextBox>TextBox</TextBox>
        </StackPanel>
        <Button x:Name="ApplyButton" DockPanel.Dock="Bottom">Apply</Button>
        <ContentControl Content="{Binding #SkinsListBox.SelectedItem.SettingsView}" DockPanel.Dock="Right"/>
        <ListBox x:Name="SkinsListBox" Items="{Binding Skins}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayName}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>
